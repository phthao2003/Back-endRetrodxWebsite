@model IEnumerable<ShopOnlineConnection.LOAISP>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="product-status-wrap">
                <h4>Loại sản phẩm</h4>
                <div class="add-product">
                    <a href="@Url.Action("Create","LoaiSanPhamAdmin")">Thêm loại sản phẩm</a>
                </div>
                <table>
                    <tbody>
                        <tr>
                            <th>Mã loại</th>
                            <th>Tên loại sản phẩm</th>
                            <th>Tình trạng</th>
                            
                        </tr>
                        @foreach (var item in Model)
                        {
                         <tr>
                        <td><img src="img/new-product/5-small.jpg" alt="">@item.MALOAI</td>
                        <td>@item.TENLOAI</td>
                        <td>
                            <button class="pd-setting">@item.TINHTRANG</button>
                        </td>

                        <td><a href="@Url.Action("Edit","LoaiSanPhamAdmin",new { id = @item.MALOAI})"> Sửa </a> </td>
                        <td><a href="@Url.Action("XoaTamThoi","LoaiSanPhamAdmin",new { id = @item.MALOAI})"> Xóa </a> </td>
                    </tr>
                        }
                    </tbody>
                </table>
                       
                <div class="custom-pagination">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

