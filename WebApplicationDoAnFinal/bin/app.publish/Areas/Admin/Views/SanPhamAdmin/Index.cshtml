@model IEnumerable<ShopOnlineConnection.SANPHAM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="product-status-wrap">
                <h4>Sản phẩm</h4>
                <div class="add-product">
                    <a href="@Url.Action("Create","SanPhamAdmin")">Thêm sản phẩm</a>
                </div>
                <table>
                    <tbody>
                        <tr>
                            <th>Mã sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Tình trạng</th>
                            <th>Mô tả</th>
                            <th>Mã hình ảnh</th>
                            <th>Mã loại</th>

                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="img/new-product/5-small.jpg" alt="">@item.MASP</td>
                                <td>@item.TENSP</td>
                                <td>@item.GIA</td>
                                <td>
                                    <button class="pd-setting">@item.TINHTRANG</button>
                                </td>
                                <td>@item.MOTA</td>
                                <td><img src="~/Assets/images/@item.HINHCHINH" style="width:100px;height:100px;" /></td>
                                <td>@item.MALOAI</td>                            
                                <td><a href="@Url.Action("Edit","SanPhamAdmin",new { id = @item.MASP})"> Sửa </a> </td>
                                <td><a href="@Url.Action("XoaTamThoi","SanPhamAdmin",new { id = @item.MASP})"> Xóa </a> </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="custom-pagination">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
